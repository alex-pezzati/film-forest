doctype html
html
  head
      block head
        title= "Film Forest"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/mainPageNav.css')
        .navbar 
            .navbar_container 
                .navbar_logo 
                    a(href='/')
                        img(src='/images/FilmForestLogo.png')
                //- +validationErrorSummary(errors)
                form.form-inline(method='post' action='/users/login')
                    input(type='hidden' name='_csrf' value=csrfToken)
                    input(type='text' name='email' placeholder='Enter email')
                    input(type='password' name='password' placeholder='Enter password')
                    a(href='/users/register')
                    button(class='button' type='submit') Login
        .header 
            .header_container 


  body 


block content
    div(class='table-container')
        table(class='movie-table')
            thead
                tr
                    th(scope='Movie-Title') Movie Title
                    th(scope='Genre') Genre
                    th(scope='Rating') Rating
            tbody
                each movie in movies
                    tr
                        td= movie.title
                        td= movie.genre
                        td= movie.totalRating
