append head
    link(rel='stylesheet' href='stylesheets/navbar.css')

.navbar
    .navbar_container
        .navbar_logo
            a(href='/')
                img(src='/images/FilmForestLogo.png')
        if locals.authenticated
            ul.navbar_list
                li: a(href='/my-movies') My Movies
                li: form(class='logout' action='/users/logout' method='post')
                       button.button(type='submit') Logout
            .navbar_search
                input(type='search' placeholder='Search Movies')
            .navbar_user
                a(href='/'): img(src='/images/FFminiLogo.png')
        else
            ul.navbar_list
                li: a(href='/my-movies') My Movies
                li: a(href='/users/login') Login
                li: a(href='/users/register') Register
            .navbar_search
                input(type='search' placeholder='Search Movies')
            .navbar_user
                a(href='/')
                    img(src='/images/FFminiLogo.png')
